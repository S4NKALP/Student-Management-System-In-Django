# Django Settings
# Required: Secret key for Django's cryptographic signing
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=*

# Database Configuration
# Optional: Database engine (default: django.db.backends.sqlite3)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_TIMEOUT=20
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=

# Cache Configuration
# Optional: Use Redis cache (True/False)
USE_REDIS_CACHE=True
# Optional: Redis URL (default: redis://localhost:6379/1)
REDIS_URL=redis://localhost:6379/1
CACHE_TIMEOUT=300
CACHE_KEY_PREFIX=sms
CACHE_MAX_CONNECTIONS=1000

# Email Configuration
# Optional: Email backend (default: django.core.mail.backends.console.EmailBackend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@studentmanagementsystem.com
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_USE_TLS=True

# Firebase Configuration
# Required: Firebase API key
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# SMS Configuration
# Required: SMS API key
SMS_API_KEY=your_sms_api_key_here
SMS_SENDER_ID=SMSSYS

# Gunicorn Configuration
# Optional: Number of worker processes (default: 4)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2 